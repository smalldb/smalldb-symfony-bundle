{% import "@Smalldb/data_collector/machine_macros.html.twig" as M %}

{% for transition in transitions %}
	<table>
		{{ M.tableColumns() }}
		<thead>
		<tr>
			<th colspan="3" class="key">
				<big>
					Transition: {{ transition.name }}
				</big>
			</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<th colspan="2" class="key font-normal">Name</th>
			<td>{{ dump(transition.name) }}</td>
		</tr>
		<tr>
			<th colspan="2" class="key font-normal">Source &amp; target states</th>
			<td>
				{{ M.state(transition.sourceState) }}
				<span style="border-bottom: 1px solid; padding: 0 1.5em; position: relative; top: -0.5em;">{{ transition.name }}</span>â–¶
				{% for ts in transition.targetStates %}
					{{ M.state(ts) }}
				{% endfor %}
			</td>
		</tr>
		{{ M.dumpExtensions(transition) }}
		</tbody>
	</table>
{% else %}
	<div class="empty">
		<p>No transitions defined.</p>
	</div>
{% endfor %}
