{% import "@Smalldb/data_collector/machine_macros.html.twig" as M %}

{% for property in properties %}
	<table>
		<colgroup>
			<col width="16%">
			<col width="8%">
			<col width="76%">
		</colgroup>
		<thead>
		<tr>
			<th colspan="3" class="key">
				<big>
					Property: {{ property.name }}
				</big>
			</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<th colspan="2" class="key">Name</th>
			<td>{{ dump(property.name) }}</td>
		</tr>
		{{ M.dumpExtensions(property) }}
		</tbody>
	</table>
{% else %}
	<div class="empty">
		<p>No properties defined.</p>
	</div>
{% endfor %}
