{% import "@Smalldb/data_collector/machine_macros.html.twig" as M %}

{% for action in actions %}
	<table>
		{{ M.tableColumns() }}
		<thead>
		<tr>
			<th colspan="3" class="key">
				<big>
					Action: {{ action.name }}
				</big>
			</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<th colspan="2" class="key font-normal">Name</th>
			<td>{{ dump(action.name) }}</td>
		</tr>
		{{ M.dumpExtensions(action) }}
		</tbody>
	</table>
	<div style="margin-left: 6em; margin-bottom: 3em;">
		{{ M.transitions(action.transitions) }}
	</div>
{% else %}
	<div class="empty">
		<p>No actions defined.</p>
	</div>
{% endfor %}
